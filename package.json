{
  "name": "@js.properties/properties",
  "version": "0.3.0-pre",
  "description": "JavaScript .properties parser",
  "keywords": [
    ".properties",
    "properties",
    "parser"
  ],
  "repository": "jsproperties/properties",
  "homepage": "https://github.com/jsproperties/properties",
  "bugs": "https://github.com/jsproperties/properties/issues",
  "license": "MIT",
  "author": "pallxk <github@pallxk.com>",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files":[
    "src/*.js",
    "src/*.pegjs",
    "types/*.ts",
    "lib/*.js",
    "lib/*.map",
    "dist/*.js",
    "dist/*.map"
  ],
  "scripts": {
    "test": "tap test/js/*.test.js",
    "test:snapshot": "node test/js/parse.test.js --gen && node test/js/namespace.test.js --gen",
    "lint": "eslint .",
    "prepare": "yon run pegjs && yon run babel && yon run webpack",
    "watch": "yon run pegjs:watch & yon run babel:watch & yon run webpack:watch",
    "pegjs": "pegjs -o src/properties.pegjs.js src/properties.pegjs",
    "pegjs:watch": "npm-watch pegjs",
    "babel": "babel -s -d lib src",
    "babel:watch": "babel -w -s -d lib src",
    "webpack": "webpack --config webpack.dev.js && webpack --config webpack.prod.js",
    "webpack:watch": "webpack -w --config webpack.dev.js"
  },
  "watch": {
    "pegjs": "src/properties.pegjs"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "lodash": "^4.17.4",
    "npm-watch": "^0.3.0",
    "pegjs": "^0.10.0",
    "pegjs-loader": "^0.5.4",
    "tap": "^11.0.0",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "yarn-or-npm": "^2.0.4"
  }
}
